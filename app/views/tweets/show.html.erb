<div class = 'row'>
	<div class = 'col-md-8 col-md-offset-2'>
		<div id = 'show'>
			<h1 id = 'show_title'>Showing Recent Tweets for <%= @tweet.handle%></h1>

			<div class="chart"></div>

			<% @tweets_array.each_with_index do |tweet, index| %>
				<div id = 'tweet_<%=index%>'>
					<br>
					<h3><%= tweet[0]%></h4>
					<p style = 'color:#7f0000;'>The above tweet is <b><%= tweet[1]%>%</b> positive!</p>
					<p style = 'color:#7f0000;'><%= tweet[2]%></p>
					<br>
				</div>
			<% end %>
		</div>
	</div>
</div>


